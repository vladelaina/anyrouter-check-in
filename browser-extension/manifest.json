{
  "manifest_version": 3,
  "name": "AnyRouter Check-in Helper",
  "version": "1.0",
  "description": "自动获取 AnyRouter 签到所需的 Session 和 API User ID",
  "permissions": [
    "cookies",
    "storage",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
